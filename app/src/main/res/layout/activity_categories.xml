<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity"
    >

    <include layout="@layout/toolbar">

    </include>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_drawer"
        app:headerLayout="@layout/nav_header">


    </android.support.design.widget.NavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select the category you want to see!"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_busines"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bussines"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:padding="0dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_marvel"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/marvel"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marvel"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:padding="0dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_entretenimento"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/entretenimento"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entertaiment"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:padding="0dp"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>